{
  "name": "components",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared Vue 3 components",
  "license": "ISC",
  "author": "",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./src/*": "./src/*",
    "./BaseTable/*": "./src/BaseTable/*",
    "./BaseTable/components/*": "./src/BaseTable/components/*",
    "./BaseTable/types": "./src/BaseTable/types/index.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vue-tsc --build && vite build",
    "build:types": "vue-tsc --build",
    "build:lib": "vite build",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "jsdom": "^27.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.8",
    "vue-tsc": "^2.0.0"
  }
}
